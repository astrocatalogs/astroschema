{
    "$schema": "http://json-schema.org/schema#",
    "title": "quantity",
    "description": "An item representing a numerical value.",
    "version": "0.3",
    "type": "object",

    "definitions": {
        "NUMERIC": {
            "type": ["number", "string"],
            "format": "numeric"
        }
    },

    "properties": {
        "value": {
            "description": "The value (not necessarily numeric) associated with this Quantity.",
            "unique": false,
            "distinguishing": true
        },
        "error_value": {
            "description": "Symmetric, one-sigma error associated with this Quantity's value.",
            "$ref": "#/definitions/NUMERIC",
            "unique": false,
            "distinguishing": true
        },
        "error_upper": {
            "description": "Upper (plus) one-sigma error on this Quantity's value.",
            "$ref": "#/definitions/NUMERIC",
            "unique": false,
            "distinguishing": true
        },
        "error_lower": {
            "description": "Lower (minus) one-sigma error on this Quantity's value.",
            "$ref": "#/definitions/NUMERIC",
            "unique": false,
            "distinguishing": true
        },
        "upper_limit": {
            "description": "Lower (minus) one-sigma error on this Quantity's value.",
            "type": "boolean",
            "unique": false,
            "distinguishing": true
        },
        "lower_limit": {
            "description": "Lower (minus) one-sigma error on this Quantity's value.",
            "type": "boolean",
            "unique": false,
            "distinguishing": true
        },
        "derived": {
            "description": "Whether or not this Quantity is derived from other parameters/observations.",
            "type": "boolean",
            "unique": false,
            "distinguishing": true
        },
        "description": {
            "description": "Any additional descriptive/meta information about this quantity.",
            "type": "string",
            "unique": false,
            "distinguishing": false
        },
        "units_value": {
            "description": "The units with which this Quantity's value is stored.",
            "type": "string",
            "unique": false,
            "distinguishing": true
        },
        "units_error": {
            "description": "The units with which this Quantity's errors are stored.",
            "type": "string",
            "unique": false,
            "distinguishing": true
        },
        "kind": {
            "type": "string",
            "unique": false,
            "distinguishing": true,
            "minLength": 1
        },
        "source": {
            "type": ["string", "number"],
            "unique": false,
            "distinguishing": false
        },
        "prob": {
            "$ref": "#/definitions/NUMERIC"
        },
        "model": {
            "type": "string",
            "distinguishing": false
        },
        "realization": {
            "type": "string"
        }

    },

    "required": ["value", "source"]

}

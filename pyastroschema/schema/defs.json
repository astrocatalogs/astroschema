{
    "$schema": "http://json-schema.org/schema#",
    "title": "defs",
    "description": "Schema specifying definitions used throughout astroschema.",
    "type": "object",
    "id": "defs.json",
    "version": "0.2",

    "definitions": {
        "STRING": {
            "type": "string",
            "format": "string",
            "minLength": 1
        },
        "STRING_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/STRING"
            }
        },
        "STRING_LISTABLE": {
            "anyOf": [
                {"$ref": "#/definitions/STRING"},
                {"$ref": "#/definitions/STRING_LIST"}
            ]
        },
        "NUMERIC": {
            "type": ["number", "string"],
            "format": "numeric"
        },
        "NUMERIC_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/NUMERIC"
            }
        },
        "NUMERIC_LISTABLE": {
            "anyOf": [
                {"$ref": "#/definitions/NUMERIC"},
                {"$ref": "#/definitions/NUMERIC_LIST"}
            ]
        },
        "SOURCE": {
            "$ref": "file:source.json"
        },
        "SOURCE_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/SOURCE"
            }
        },
        "QUANTITY": {
            "$ref": "file:quantity.json"
        },
        "QUANTITY_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/QUANTITY"
            }
        },
        "QUANTITY_LISTABLE": {
            "anyOf": [
                {"$ref": "#/definitions/QUANTITY"},
                {"$ref": "#/definitions/QUANTITY_LIST"}
            ]
        },
        "PHOTOMETRY": {
            "$ref": "file:photometry.json"
        },
        "PHOTOMETRY_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/PHOTOMETRY"
            }
        },
        "SPECTRUM": {
            "$ref": "file:spectrum.json"
        },
        "SPECTRUM_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/SPECTRUM"
            }
        },
        "TIME": {
            "type": ["number", "string"],
            "format": "astrotime"
        },
        "TIME_LIST": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/TIME"
            }
        },
        "TIME_LISTABLE": {
            "anyOf": [
                {"$ref": "#/definitions/TIME"},
                {"$ref": "#/definitions/TIME_LIST"}
            ]
        }
    }

}

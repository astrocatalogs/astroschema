{
    "$schema": "http://json-schema.org/schema#",
    "title": "source",
    "description": "An item representing a bibliographic attribution or reference.",
    "version": "0.5",
    "id": "source.json",
    "type": "object",

    "properties": {
        "alias": {
            "description": "The unique identifier for this source.",
            "type": ["integer", "string"],
            "unique": false,
            "distinguishing": false,
            "anyOf": [
                { "type": "string", "minLength": 1 },
                { "type": "number", "minimum": 0 }
            ]
        },
        "name": {
            "description": "Description designation for this source.",
            "allOf": [
                { "$ref": "file:defs.json#/definitions/STRING" }
            ],
            "unique": false,
            "distinguishing": true,
            "minLength": 3
        },
        "bibcode": {
            "allOf": [
                { "$ref": "file:defs.json#/definitions/STRING" }
            ],
            "unique": true,
            "distinguishing": true,
            "minLength": 19,
            "maxLength": 19
        },
        "arxivid": {
            "description": "ID number for the arXiv.",
            "allOf": [
                { "$ref": "file:defs.json#/definitions/STRING" }
            ],
            "unique": true,
            "distinguishing": true
        },
        "doi": {
            "description": "Digital Object Identifier (DOI) for this source.",
            "allOf": [
                { "$ref": "file:defs.json#/definitions/STRING" }
            ],
            "unique": true,
            "distinguishing": true
        },
        "url": {
            "type": "string",
            "format": "uri",
            "unique": false,
            "distinguishing": false
        },
        "secondary": {
            "type": "boolean",
            "unique": false,
            "distinguishing": false
        }
    },

    "required": ["alias"],

    "anyOf": [
        { "required": ["bibcode"]},
        { "required": ["arxivid"]},
        { "required": ["doi"]},
        { "required": ["url"]},
        { "required": ["name"]}
    ]

}
